<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/msg_default_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/msg_btn_margin"
            android:layout_weight="1"
            android:text="@string/msg_default" />

        <Button
            android:id="@+id/msg_rc_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/msg_btn_margin"
            android:layout_weight="1"
            android:text="@string/msg_rc" />

        <Button
            android:id="@+id/msg_sp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/msg_btn_margin"
            android:layout_weight="1"
            android:text="@string/msg_sp" />

        <Button
            android:id="@+id/msg_notify_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/msg_btn_margin"
            android:layout_weight="1"
            android:text="@string/msg_notify" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray" />

    <mo.oa.io.mo.Widget.MultiRefreshLayout
        android:id="@+id/comm_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/msg_btn_margin">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/msg_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbars="vertical" />

    </mo.oa.io.mo.Widget.MultiRefreshLayout>

</LinearLayout>